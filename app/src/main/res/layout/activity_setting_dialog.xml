<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="54dp">
        <android.support.v7.widget.AppCompatTextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:layout_width="100dp" android:layout_height="match_parent" android:text="自动对焦" />
        <LinearLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1.0" />
        <com.suke.widget.SwitchButton android:id="@+id/btnAutoFocus" android:layout_width="80dp" android:layout_height="36dp" />
    </LinearLayout>
    <LinearLayout android:background="@android:color/darker_gray" android:layout_width="match_parent" android:layout_height="1dp" />
    <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="54dp">
        <android.support.v7.widget.AppCompatTextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:layout_width="100dp" android:layout_height="match_parent" android:text="图片质量" />
        <LinearLayout android:gravity="right|center_vertical|center_horizontal|center" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1.0">
            <com.nex3z.togglebuttongroup.SingleSelectToggleGroup android:id="@+id/btnQuality" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <com.nex3z.togglebuttongroup.button.LabelToggle android:textColor="@android:color/white" android:id="@+id/choice_a" android:layout_width="56dp" android:layout_height="wrap_content" android:text="低" />
                <com.nex3z.togglebuttongroup.button.LabelToggle android:textColor="@android:color/white" android:id="@+id/choice_b" android:layout_width="56dp" android:layout_height="wrap_content" android:text="中" />
                <com.nex3z.togglebuttongroup.button.LabelToggle android:textColor="@android:color/white" android:id="@+id/choice_c" android:layout_width="56dp" android:layout_height="wrap_content" android:text="高" />
            </com.nex3z.togglebuttongroup.SingleSelectToggleGroup>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:background="@android:color/darker_gray" android:layout_width="match_parent" android:layout_height="1dp" />
    <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="54dp">
        <android.support.v7.widget.AppCompatTextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:layout_width="100dp" android:layout_height="match_parent" android:text="地理信息" />
        <LinearLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1.0" />
        <com.suke.widget.SwitchButton android:id="@+id/btnDili" android:layout_width="80dp" android:layout_height="36dp" />
    </LinearLayout>
    <LinearLayout android:background="@android:color/darker_gray" android:layout_width="match_parent" android:layout_height="1dp" />
    <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="54dp">
        <android.support.v7.widget.AppCompatTextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:layout_width="100dp" android:layout_height="match_parent" android:text="时间信息" />
        <LinearLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1.0" />
        <com.suke.widget.SwitchButton android:id="@+id/btnTime" android:layout_width="80dp" android:layout_height="36dp" />
    </LinearLayout>
</LinearLayout>

